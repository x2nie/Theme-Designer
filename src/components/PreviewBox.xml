<templates>

<div t-name="theme_preview" class="DMRESET preview-box" 
    style="" t-on-click="previewClick" >
    
    <t t-call="sample_app.inactive"/>
    <t t-call="sample_app.active"/>
    <t t-call="sample_app.message-box"/>
</div>


<div t-name="sample_app.inactive" class="window win70 win98 sample_app" 
            style="--dialog-blue:grey; --dialog-blue-light:silver; "
    >
        <div class="title-bar" data-el="InactiveTitle">
            <div class="title-bar-text">Inactive Window</div>
            <div class="title-bar-controls" data-el="CaptionHeight">
            <button aria-label="Minimize"></button>
            <button aria-label="Maximize"></button>
            <button aria-label="Close"></button>
            </div>
        </div>
        <div class="window-body">
            <p>There's so much room for activities!</p>
            
        </div>
</div>


<div t-name="sample_app.active" class="window win70 win98 active sample_app" 
            style="--element-spacing:0; --0dialog-blue:gold; --0dialog-blue-light:lime; "
    >
        <div class="title-bar" data-el="ActiveTitle">
            <div class="title-bar-text">Active Window</div>
            <div class="title-bar-controls" data-el="CaptionHeight">
            <button aria-label="Minimize"></button>
            <button aria-label="Maximize"></button>
            <button aria-label="Close"></button>
            </div>
        </div>
        <t t-call="sample_app.menu"/>
        <div class="window-body">
            <!-- <p>There's so much room for activities!</p> -->
            <div id="window-and-scrollbar" data-el="Scrollbar">
                <div>
                    <textarea data-el="window-text" 
                        style="box-shadow:none; border:none;"
                        rows="8" readonly="readonly">Window Text</textarea>
                </div>
            </div>
            
        </div>
</div>

<div t-name="sample_app.message-box" class="window win70 win98 active message-box" 
            style="--element-spacing:0; --0dialog-blue:gold; --0dialog-blue-light:lime; "
    >
        <div class="title-bar" data-el="ActiveTitle">
            <div class="title-bar-text">Message Box</div>
            <div class="title-bar-controls" data-el="CaptionHeight">
            <button aria-label="Close"></button>
            </div>
        </div>
        <div class="window-body" data-el="WindowText">
            <!-- <p>There's so much room for activities!</p> -->
            Message Text
            <button>OK</button>
            
        </div>
</div>

<ul t-name="sample_app.menu" role="menubar" class="can-hover">
  <li role="menuitem" tabindex="0" class="no-hover">Normal</li>
  <li role="menuitem" disabled="disabled" tabindex="0">Disabled</li>
  <li role="menuitem" tabindex="0" class="selected">Selected</li>
</ul>

</templates>